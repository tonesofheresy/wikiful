<%= form_for @article do |f| %>
<div class="control-group">
  <%= f.label :title %>
  <div class="controls">
    <%= f.text_field :title %>
  </div>
</div>
<div class="control-group">
  <%= f.label :content %>
  <div class="controls">
    <%= f.text_area :content, rows: "20", cols: "100", class:"article-content" %>
  </div>
</div>

<div class="category-control">
  <%= f.label "File under at least one category" %>
  <% Category.all.order("name ASC").each do |cat| %>
  <div>
    <%= check_box_tag "article[category_ids][]", cat.id %>
    <%= cat.name %>
  </div>
  <% end %>
</div>

<div class="form-actions">
  <%= f.submit("Create Article") %>
  <%= link_to "Cancel", articles_path %>
</div>
<% end %>