<h1>Welcome to Wikiful!</h1>
<h3>Here are our most recent articles:</h3>
<% @articles.each do |article| %>
<div>
  <p><%= link_to article.title, article %></p>
  <p style="padding-left: 5em">Published on: <%= article.created_at.strftime("%b %d, %Y") %></p>
  <p style="padding-left: 5em">Filed under: <% article.categories.order(:name).each do |category| %>
    <%= link_to category.name, category %>&nbsp;<% end %></p>
  <p style="padding-left: 5em">Preview: <%= truncate(article.content, length: 100) %></p>
</div>
<% end %>
  